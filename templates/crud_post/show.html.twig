{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <!-- Page Header-->
    <header class="masthead">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="site-heading">
                        <h1>Post Voir</h1>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container-fluid px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <h1>Post</h1>

                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ post.id }}</td>
                        </tr>
                        <tr>
                            <th>Titre</th>
                            <td>{{ post.postTitle }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ post.postDescription }}</td>
                        </tr>
                        <tr>
                            <th>Date de création</th>
                            <td>{{ post.postDateCreated ? post.postDateCreated|date('d/m/Y H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Date de publication</th>
                            <td>{{ post.postDatePublished ? post.postDatePublished|date('d/m/Y H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Publié</th>
                            <td>{{ post.postPublished ? 'Oui' : 'Non' }}</td>
                        </tr>
                    </tbody>
                </table>

                <a href="{{ path('app_crud_post_index') }}">Retour à la liste</a>

                <a href="{{ path('app_crud_post_edit', {'id': post.id}) }}">Modifier</a>

                {{ include('crud_post/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
